{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/env": [
        "./src/env"
      ],
      "@/components": [
        "./src/components"
      ],
      "@/hooks": [
        "./src/_hooks"
      ],
      "@/shared": [
        "./src/_shared"
      ],
      "@/styles": [
        "./src/_styles"
      ],
      "@/theme": [
        "./src/_theme"
      ],
      "@/types": [
        "./src/_types"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}